	<queryString>
		<![CDATA[SELECT
    autor_id,
    autor_nome,
	STRING_AGG(livro_titulo, chr(10)) AS livros,
	STRING_AGG(livro_editora, chr(10)) AS editoras,
	STRING_AGG(livro_ano_publicacao, chr(10)) AS anos_publicacao,
		STRING_AGG(
			'R$ ' ||
			replace(
				replace(
					replace(to_char(livro_valor, 'FM999G999G990D00'), ',', 'X'),
					'.', ','
				),
				'X', '.'
			),
			chr(10)
		) AS valores,
    STRING_AGG(assuntos, ', ') AS assuntos,
	STRING_AGG(todos_autores, chr(10)) AS todos_autores
FROM vw_relatorio_livros_por_autor
GROUP BY autor_id, autor_nome
ORDER BY autor_nome]]>
